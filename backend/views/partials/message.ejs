<% if (message && !success && !danger) { %>
<div
  class="w-full flex justify-center message-alert transition-opacity duration-700"
>
  <div
    class="relative bg-blue-100 border border-blue-400 text-blue-700 px-6 py-4 rounded mb-4 w-full flex items-center justify-between"
  >
    <span class="text-left"><%= message %></span>
    <button
      type="button"
      class="ml-4 bg-blue-200 hover:bg-blue-300 text-blue-700 hover:text-blue-900 font-bold focus:outline-none border border-blue-400 rounded p-2 cursor-pointer"
      onclick="this.parentElement.parentElement.classList.add('opacity-0'); setTimeout(() => { this.parentElement.parentElement.style.display='none'; }, 800);"
      >&times;</button
    >
  </div>
</div>
<% } %> <% if (danger) { %>
<div
  class="w-full flex justify-center message-alert transition-opacity duration-700"
>
  <div
    class="relative bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded mb-4 w-full flex items-center justify-between"
  >
    <span class="text-left"><%= danger %></span>
    <button
      type="button"
      class="ml-4 bg-red-200 hover:bg-red-300 text-red-700 hover:text-red-900 font-bold focus:outline-none border border-red-400 rounded px-2 py-1 cursor-pointer"
      onclick="this.parentElement.parentElement.classList.add('opacity-0'); setTimeout(() => { this.parentElement.parentElement.style.display='none'; }, 800);"
      >&times;</button
    >
  </div>
</div>
<% } %> <% if (success) { %>
<div
  class="w-full flex justify-center message-alert transition-opacity duration-700"
>
  <div
    class="relative bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded mb-4 w-full flex items-center justify-between"
  >
    <span class="text-left"><%= success %></span>
    <button
      type="button"
      class="ml-4 bg-green-200 hover:bg-green-300 text-green-700 hover:text-green-900 font-bold focus:outline-none border border-green-400 rounded px-2 py-1 cursor-pointer"
      onclick="this.parentElement.parentElement.classList.add('opacity-0'); setTimeout(() => { this.parentElement.parentElement.style.display='none'; }, 800);"
      >&times;</button
    >
  </div>
</div>
<% } %>
<script>
  setTimeout(function () {
    document.querySelectorAll(".message-alert").forEach(function (el) {
      el.classList.add("opacity-0");
      setTimeout(function () {
        el.style.display = "none";
      }, 800);
    });
  }, 2000); // 2 seconds
</script>
